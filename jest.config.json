{
  "transform": {
    ".(ts)": "ts-jest"
  },
  "moduleNameMapper": {
    "^~(.*)$": "<rootDir>/src/$1",
    "^helpers(.*)$": "<rootDir>/__tests__/helpers/$1"
  },
  "testEnvironment": "node",
  "preset": "ts-jest",
  "testMatch": ["**/__tests__/**/*test.ts?(x)"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/index.ts",
    "!src/config/**/*.ts",
    "!src/common/enums.ts"
  ],
  "reporters": [
    "default",
    [
      "./node_modules/jest-html-reporter",
      {
        "pageTitle": "Short Url",
        "outputPath": "coverage/index.html"
      }
    ]
  ]
}
